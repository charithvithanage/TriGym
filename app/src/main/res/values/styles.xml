<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorHint">@color/platinum</item>
        <!-- color for widget theming, eg EditText. Doesn't effect ActionBar. -->
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="input_text_title_style">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">@font/roboto</item>
    </style>
    <style name="input_edittext_title_style" parent="android:Widget.EditText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <style name="dialog_title_style">
        <item name="android:textColor">@color/charcoal</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="dialog_warnig_title_style">
        <item name="android:textColor">@color/buttonRed</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="dialog_no_btn_style">
        <item name="android:textColor">@color/radical_red</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="dialog_yes_btn_style">
        <item name="android:textColor">@color/azure</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="client_view_lable_style" parent="android:Widget.TextView">
        <item name="android:textColor">@color/cadet_grey</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="client_view_text_style" parent="android:Widget.TextView">
        <item name="android:textColor">@color/charcoal</item>
        <item name="android:textSize">18sp</item>
    </style>


    <style name="login_btn_style" parent="android:Widget.Button">
        <item name="android:textColor">@color/primaryWhite</item>
        <item name="android:textSize">@dimen/medium_font_size</item>
        <item name="android:textStyle">normal</item>

    </style>

    <style name="edittext_title_style" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/medium_font_size</item>
        <item name="android:textStyle">normal</item>

    </style>


    <style name="action_title_style" parent="android:Widget.TextView">
        <item name="android:textColor">@color/primaryWhite</item>
        <item name="android:textSize">@dimen/actionbarFontSize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="buttonStyle">
        <item name="android:textSize">@dimen/btnFontSize</item>
        <item name="android:textColor">@color/primaryWhite</item>
    </style>

    <style name="select_btn_style" parent="android:Widget.TextView">
        <item name="android:textColor">@color/charcoal</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="deselect_btn_style" parent="android:Widget.TextView">
        <item name="android:textColor">@color/platinum</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="profile_lable_style" parent="android:Widget.TextView">
        <item name="android:textColor">@color/cadet_grey</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="profile_textview_style" parent="android:Widget.TextView">
        <item name="android:textColor">@color/charcoal</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="dialog_button_text_style"  parent="android:Widget.TextView">
        <item name="android:textColor">@color/charcoal</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/roboto_bold</item>
    </style>
</resources>
