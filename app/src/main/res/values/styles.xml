<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="dialog_title_style">
        <item name="android:textColor">@color/charcoal</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="dialog_no_btn_style">
        <item name="android:textColor">@color/radical_red</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="dialog_yes_btn_style">
        <item name="android:textColor">@color/azure</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="client_view_lable_style" parent="android:Widget.TextView">
        <item name="android:textColor">@color/cadet_grey</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="client_view_text_style" parent="android:Widget.TextView">
        <item name="android:textColor">@color/charcoal</item>
        <item name="android:textSize">18sp</item>
    </style>


    <style name="login_btn_style" parent="android:Widget.Button">
        <item name="android:textColor">@color/primaryWhite</item>
        <item name="android:textSize">@dimen/medium_font_size</item>
        <item name="android:textStyle">normal</item>

    </style>


    <style name="edittext_title_style" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/medium_font_size</item>
        <item name="android:textStyle">normal</item>

    </style>

</resources>
