<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/buttonGreen"></solid>
            <corners android:radius="@dimen/button_radius"></corners>
        </shape>
    </item>

    <item
        android:bottom="@dimen/button_border_width"
        android:left="@dimen/button_border_width"
        android:right="@dimen/button_border_width"
        android:top="@dimen/button_border_width">
        <shape android:shape="rectangle">
            <solid android:color="@color/primaryWhite"></solid>
            <corners android:radius="@dimen/button_radius"></corners>
        </shape>
    </item>
</layer-list>